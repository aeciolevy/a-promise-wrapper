{
  "name": "a-promise-wrapper",
  "description": "Utility object which  helps you avoid try and catch blocks inside async functions",
  "version": "1.1.0",
  "author": "Carlos Adan Cortes (https://www.carlosadan.com)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/krlozadan/a-promise-wrapper/issues"
  },
  "homepage": "https://github.com/krlozadan/a-promise-wrapper#readme",
  "main": "index.js",
  "scripts": {
    "dev": "watch \"npm run build\" src",
    "build": "webpack",
    "test": "dtslint && standardx **/*.ts --fix && jest",
    "test:watch": "jest --watch --verbose",
    "pack": "npm pack --dry-run",
    "prepare": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/krlozadan/a-promise-wrapper.git"
  },
  "keywords": [
    "async",
    "promise",
    "try",
    "catch",
    "wrapper",
    "utility",
    "util",
    "wrap",
    "await",
    "asynchronous"
  ],
  "devDependencies": {
    "@babel/core": "^7.7.4",
    "@babel/preset-env": "^7.7.4",
    "@babel/preset-typescript": "^7.7.4",
    "@types/jest": "^24.0.23",
    "@typescript-eslint/eslint-plugin": "^2.8.0",
    "@typescript-eslint/parser": "^2.8.0",
    "babel-loader": "^8.0.6",
    "jest": "^24.9.0",
    "standardx": "^5.0.0",
    "ts-jest": "^24.2.0",
    "typescript": "^3.7.2",
    "watch": "^1.0.2",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10"
  },
  "dependencies": {},
  "eslintConfig": {
    "rules": {
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": "error"
    }
  },
  "standardx": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint/eslint-plugin"
    ]
  }
}
