  "bugs": {
    "url": "https://github.com/krlozadan/a-promise-wrapper/issues"
  },
  "homepage": "https://github.com/krlozadan/a-promise-wrapper#readme",
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "babel-jest": "^24.7.1",
    "jest": "^24.7.1",
    "watch": "^1.0.2"
  },
  "dependencies": {
    "@babel/polyfill": "^7.4.4"
  }
